﻿@using System
@using System.Linq
@using System.Security.Claims
@using System.Web
@using Microsoft.Owin.Security
@{
    var authentication = Context.GetOwinContext().Authentication;
}

<!DOCTYPE html>
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <title>Login</title>
</head>
<body>
    <h1>Authorization Server</h1>
    <form method="POST">
        <h2>Forms Login</h2>
        <div style="color: Red"> @ViewBag.Msg </div>
        <ul>
            <li>
                <label for="username">User name: </label>
                <input type="text" id="username" name="username" />
            </li>
            <li>
                <label for="password">Password: </label>
                <input type="password" id="password" name="password"/>
            </li>
            <!--
            <li>
                <label for="employee">IsEmployee: </label>
                <input type="checkbox" id="employee" name="employee"/>
            </li>
            --->
            <li>
                <input type="submit" name="btLogin" value="Sign In" />
            </li>
        </ul>
    </form>    
</body>
</html>
